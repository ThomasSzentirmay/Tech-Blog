<h1 class="page-title">The Tech Blog</h1>

{{#each blogs}}
  <div class="blog-container">
        <div class="top-line">
            <h3 class="blog-title">{{this.title}}</h3>
            <p class="blog-author">Posted by {{user.userName}} on {{createdAt}}</p>
        </div>
    <p class="blog-comment">{{this.text}}</p>
  </div>
{{/each}}